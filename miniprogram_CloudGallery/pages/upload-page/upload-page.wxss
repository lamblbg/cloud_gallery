.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.block {
  color: #ffffff;
}
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.container .header {
  display: flex;
  justify-content: space-between;
}
.container .header > span {
  font-weight: bolder;
}
.container .header .right {
  display: flex;
}
.container .header .right .info {
  display: flex;
  flex-direction: column;
}
.container .header .right .info span:nth-child(2) {
  font-size: 0.1em;
}
.container .header .right image {
  margin: 0 0.5em;
  width: 50px;
  height: 50px;
}
.container .new,
.container .files {
  margin-top: 2em;
}
.container .new {
  font-size: 0.5em;
}
.upload_btn {
  margin: 0.5em;
}
